#include "FileEditor.h"
#include "UserInterface.h"
#include <iostream>

using namespace std;

int main(int argc, const char * argv[]) {
    string initialPath;
    
    // Wenn eine Datei beim Start übergeben wird: sofort öffnen
    if (argc > 1) initialPath = argv[1];
    
    FileEditor fe;
    UserInterface ui(fe);
    ui.run(initialPath);
    
    return 0;
}
